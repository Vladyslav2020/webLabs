{
  "name": "web",
  "version": "1.0.0",
  "description": "weblabs",
  "main": "index.js",
  "scripts": {
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix",
    "prettier": "prettier --write",
    "format": "stylelint **/*.css",
    "format:fix": "stylelint **/*.css --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.{js,ts,html}": [
      "prettier --write",
      "git add -A ."
    ],
    "*.{js,ts}": [
      "eslint"
    ],
    "*.css": [
      "stylelint --fix",
      "git add -A ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voonya/webLabs.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/voonya/webLabs/issues"
  },
  "homepage": "https://github.com/voonya/webLabs#readme",
  "devDependencies": {
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  },
  "dependencies": {
    "editorconfig": "^0.15.3"
  }
}
